extends ../layout

block stylesheets
    link(rel='stylesheet', href='/bower_components/Justified-Gallery/dist/css/justifiedGallery.css')

block javascripts
    script(src='/bower_components/Justified-Gallery/dist/js/jquery.justifiedGallery.min.js')
    script(src='/javascript/gallery.js')

block content
    mixin pagination
        .row.text-center
            .col-lg-12
                include ../includes/pagination

    +pagination
    hr

    #gallery
        if movies
            each movie in movies
                a(href="/movie/#{movie.id}")
                    img.img-responsive(src='#{movie.medium_cover_image}', alt='#{movie.title}')

        if series
            each movie in series
                a(href="/serie/#{movie._id}")
                    img.img-responsive(src='#{movie.images.poster}', alt='#{movie.title}')

    hr
    +pagination
    hr