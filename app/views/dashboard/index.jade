extends ../layouts/layout

block meta
    include ../includes/meta/default

block stylesheets
    link(rel='stylesheet', href='/bower_components/Justified-Gallery/dist/css/justifiedGallery.css')

block javascripts
    script(src='/bower_components/Justified-Gallery/dist/js/jquery.justifiedGallery.min.js')
    script(src='/javascript/gallery.js')

block content
    mixin pagination
        .row.text-center
            .col-lg-12
                include ../includes/pagination

    +pagination

    #gallery
        if movies
            each movie in movies
                a(href="/movie/#{movie.imdb}")
                    img.img-responsive(src='#{movie.cover || "/img/no-image.png"}', alt='#{movie.title}')

        if series
            each serie in series
                a(href="/serie/#{serie._id}")
                    img.img-responsive(src='#{serie.images.poster}', alt='#{serie.title}')

    hr
    +pagination
